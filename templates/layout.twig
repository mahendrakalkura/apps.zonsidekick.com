<!doctype html>
<!--[if IE 8]>
    <html class="ie8" lang="en" ng-app="application">
<![endif]-->
<!--[if IE 9]>
    <html class="ie9 gt-ie8" lang="en" ng-app="application">
<![endif]-->
<!--[if gt IE 9]><!-->
    <html class="gt-ie8 gt-ie9 not-ie" lang="en" ng-app="application">
<!--<![endif]-->
    <head>
        <link
            href="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/images/favicon.ico"
            rel="shortcut icon"
            >
        <link
            href="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/assets/stylesheets.css"
            rel="stylesheet"
            type="text/css"
            >
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0"
            >
        <!--[if lt IE 9]>
            <script
                src="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/vendor/pixeladmin/html/assets/javascripts/ie.min.js"
                ></script>
        <![endif]-->
        <title>{{ module }} - ZonSidekick</title>
    </head>
    <body
        class="theme-default main-menu-animated"
        data-rollbar-access-token-client="{{ app.rollbar.access_token.client }}"
        data-url="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}"
        >
        <div id="main-wrapper">
            <div
                class="navbar navbar-inverse"
                id="main-navbar"
                role="navigation"
                >
                <button id="main-menu-toggle" type="button">
                    <i class="navbar-icon fa fa-bars icon"></i>
                    <span class="hide-menu-text">HIDE MENU</span>
                </button>
                <div class="navbar-inner">
                    <div class="navbar-header">
                        <a
                            class="navbar-brand"
                            href="{{ url('dashboard') }}"
                            >
                            <img
                                height="26"
                                src="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/images/logo.png"
                                >
                        </a>
                        <button
                            class="navbar-toggle collapsed"
                            data-target="#main-navbar-collapse"
                            data-toggle="collapse"
                            type="button"
                            ><i class="navbar-icon fa fa-fw fa-bars"></i>
                        </button>
                    </div>
                    <div
                        class="collapse navbar-collapse main-navbar-collapse"
                        id="main-navbar-collapse"
                        >
                        <div>
                            <ul class="nav navbar-nav">
                                <li>
                                    <a
                                        href="http://zonsidekick.com/features/"
                                        target="_blank"
                                        >Features</a>
                                </li>
                                <li>
                                    <a
                                        href="http://zonsidekick.com/pricing/"
                                        target="_blank"
                                        >Pricing</a>
                                </li>
                                {% if user.id %}
                                <li>
                                    <a
                                        href="http://zonsidekick.com/my-account/"
                                        target="_blank"
                                        >My Account</a>
                                </li>
                                {% endif %}
                                <li>
                                    <a
                                        href="https://perfectsidekick.zendesk.com/hc/en-us/categories/200005513-Zon-Sidekick"
                                        target="_blank"
                                        >Support</a>
                                </li>
                                <li>
                                    <a
                                        href="http://zonsidekick.com/blog/"
                                        target="_blank"
                                        >Blog</a>
                                </li>
                                <li>
                                    <a
                                        href="http://perfectsidekick.com/affiliates"
                                        target="_blank"
                                        >Affiliates</a>
                                </li>
                            </ul>
                            {% if user.id %}
                                <div class="right clearfix">
                                    <ul class="nav navbar-nav pull-right right-navbar-nav">
                                        <li class="dropdown">
                                            <a
                                                class="dropdown-toggle user-menu"
                                                data-toggle="dropdown"
                                                >
                                                <i class="fa fa-fw fa-user">
                                                </i>
                                                <span>{{ user.name }}</span>
                                            </a>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <a href="{{ url('profile') }}">
                                                        <i class="dropdown-icon fa fa-fw fa-cog">
                                                        </i>
                                                        &nbsp;&nbsp;
                                                        Profile
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="{{ url('sign_out') }}">
                                                        <i class="dropdown-icon fa fa-fw fa-power-off">
                                                        </i>
                                                        &nbsp;&nbsp;
                                                        Sign Out
                                                    </a>
                                                </li>
                                            </ul>
                                        </li>
                                    </ul>
                                </div>
                            {% else %}
                                <div class="right clearfix">
                                    <ul class="nav navbar-nav pull-right right-navbar-nav">
                                        <li>
                                            <a>
                                                <i class="fa fa-fw fa-user">
                                                </i>
                                                <span>Guest</span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            <div id="main-menu" role="navigation">
                <div id="main-menu-inner">
                    <ul class="navigation">
                        {% if user.id %}
                            <li class="{% if nav == 'dashboard' %}active{% endif %}">
                                <a href="{{ url('dashboard') }}">
                                    <i class="menu-icon fa fa-fw fa-dashboard">
                                    </i>
                                    <span class="mm-text">Dashboard</span>
                                </a>
                            </li>
                            <li class="{% if nav == 'top_100_explorer' %}active{% endif %}">
                                <a href="{{ url('top_100_explorer') }}">
                                    <i class="menu-icon fa fa-fw fa-key"></i>
                                    <span class="mm-text">
                                        Top 100 Explorer
                                    </span>
                                </a>
                            </li>
                            <li class="{% if nav == 'keyword_suggester' %}active{% endif %}">
                                <a href="{{ url('keyword_suggester') }}">
                                    <span class="menu-icon fa fa-fw fa-list">
                                    </span>
                                    <span class="mm-text">
                                        Keyword Suggester
                                    </span>
                                </a>
                            </li>
                            <li class="mm-dropdown">
                                <a>
                                    <i class="menu-icon fa fa-fw fa-user-md">
                                    </i>
                                    <span class="mm-text">
                                        Keyword Analyzers
                                    </span>
                                </a>
                                <ul>
                                    <li class="{% if nav == 'keyword_analyzers_multiple' %}active{% endif %}">
                                        <a href="{{ url('keyword_analyzer_multiple') }}">
                                            <i class="menu-icon fa fa-fw fa-tags">
                                            </i>
                                            <span class="mm-text">
                                                Multiple
                                            </span>
                                        </a>
                                    </li>
                                    <li class="{% if nav == 'keyword_analyzers_single' %}active{% endif %}">
                                        <a href="{{ url('keyword_analyzer_single') }}">
                                            <i class="menu-icon fa fa-fw fa-tag">
                                            </i>
                                            <span class="mm-text">Single</span>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="mm-dropdown">
                                <a>
                                    <i class="menu-icon fa fa-fw fa-crosshairs">
                                    </i>
                                    <span class="mm-text">
                                        Other Analyzers
                                    </span>
                                </a>
                                <ul>
                                    <li class="{% if nav == 'author_analyzer' %}active{% endif %}">
                                        <a href="{{ url('author_analyzer') }}">
                                            <i class="menu-icon fa fa-fw fa-user">
                                            </i>
                                            <span class="mm-text">
                                                Author Analyzer
                                            </span>
                                        </a>
                                    </li>
                                    <li class="{% if nav == 'book_analyzer' %}active{% endif %}">
                                        <a href="{{ url('book_analyzer') }}">
                                            <i class="menu-icon fa fa-fw fa-book">
                                            </i>
                                            <span class="mm-text">
                                                Book Analyzer
                                            </span>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="{% if nav == 'book_tracker' %}active{% endif %}">
                                <a href="{{ url('book_tracker') }}">
                                    <i class="menu-icon fa fa-fw fa-book"></i>
                                    <span class="mm-text">
                                        Book Tracker
                                        <span class="label label-primary">
                                            NEW
                                        </span>
                                    </span>
                                </a>
                            </li>
                            <li class="{% if nav == 'popular_searches' %}active{% endif %}">
                                <a href="{{ url('popular_searches') }}">
                                    <i class="menu-icon fa fa-fw fa-search">
                                    </i>
                                    <span class="mm-text">
                                        Popular Searches
                                    </span>
                                </a>
                            </li>
                            <li class="mm-dropdown">
                                <a>
                                    <i class="menu-icon fa fa-fw fa-cogs"></i>
                                    <span class="mm-text">Others</span>
                                </a>
                                <ul>
                                    <li class="{% if nav == 'logos' %}active{% endif %}">
                                        <a href="{{ url('logos') }}">
                                            <i class="menu-icon fa fa-fw fa-picture-o">
                                            </i>
                                            <span class="mm-text">Logos</span>
                                        </a>
                                    </li>
                                    {% if has_statistics %}
                                        <li class="{% if nav == 'statistics' %}active{% endif %}">
                                            <a href="{{ url('statistics') }}">
                                                <i class="menu-icon fa fa-fw fa-bar-chart-o">
                                                </i>
                                                <span class="mm-text">
                                                    Statistics
                                                </span>
                                            </a>
                                        </li>
                                    {% endif %}
                            </ul>
                        </li>
                        <li class="support">
                            <a
                                href="https://perfectsidekick.zendesk.com/hc/en-us/categories/200005513-Zon-Sidekick"
                                target="_blank"
                                >
                                <i class="menu-icon fa fa-fw fa-bullhorn">
                                </i>
                                <span class="mm-text">Support</span>
                            </a>
                        </li>
                        {% else %}
                            <li class="{% if nav == 'keyword_suggester_free' %}active{% endif %}">
                                <a href="{{ url('keyword_suggester_free') }}">
                                    <span class="menu-icon fa fa-fw fa-list">
                                    </span>
                                    <span class="mm-text">
                                        Keyword Suggester
                                        <span class="label label-primary">
                                            FREE
                                        </span>
                                    </span>
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
            <div id="content-wrapper">
                {% block content %}
                {% endblock %}
            </div>
            <div id="main-menu-bg"></div>
        </div>
        <form
            accept-charset="UTF-8"
            action="[! action !]"
            class="hide"
            method="POST"
            ng-controller="download"
            >
            <input name="json" type="hidden" value="[! json !]">
        </form>
        {% include 'slots/modals.twig' %}
        <script
            src="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/assets/javascripts.js"
            type="text/javascript"
            ></script>
    </body>
</html>
