    <html class="gt-ie8 gt-ie9 not-ie" lang="en" ng-app="application">
<!--<![endif]-->
    <head>
        <link
            href="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/images/favicon.ico"
            rel="shortcut icon"
            >
        {% include 'slots/stylesheets.twig' %}
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0"
            >
        <!--[if lt IE 9]>
            <script
                src="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/vendor/pixeladmin/html/assets/javascripts/ie.min.js"
                ></script>
        <![endif]-->
        <title>{{ module }} - ZonSidekick</title>
    </head>
    <body
        class="theme-default main-menu-animated"
        data-url="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}"
        >
        <div id="main-wrapper">
            <div
                class="navbar navbar-inverse"
                id="main-navbar"
                role="navigation"
                >
                <button id="main-menu-toggle" type="button">
                    <i class="navbar-icon fa fa-bars icon"></i>
                    <span class="hide-menu-text">HIDE MENU</span>
                </button>
                <div class="navbar-inner">
                    <div class="navbar-header">
                        <a
                            class="navbar-brand"
                            href="{{ url('dashboard') }}"
                            >ZonSidekick</a>
                        <button
                            class="navbar-toggle collapsed"
                            data-target="#main-navbar-collapse"
                            data-toggle="collapse"
                            type="button"
                            ><i class="navbar-icon fa fa-bars"></i></button>
                    </div>
                    <div
                        class="collapse navbar-collapse main-navbar-collapse"
                        id="main-navbar-collapse"
                        >
                        <div>
                            <ul class="nav navbar-nav">
                                <li>
                                    <a href="{{ url('dashboard') }}">
                                        Dashboard
                                    </a>
                                </li>
                                <li class="dropdown">
                                    <a
                                        class="dropdown-toggle"
                                        data-toggle="dropdown"
                                        href="{{ url('dashboard') }}"
                                        >Projects</a>
                                    <ul class="dropdown-menu">
                                        <li><a href="{{ url('dashboard') }}">Add</a></li>
                                    </ul>
                                </li>
                            </ul>
                            <div class="right clearfix">
                                <ul class="nav navbar-nav pull-right right-navbar-nav">
                                    <li class="dropdown">
                                        <a
                                            class="dropdown-toggle user-menu"
                                            data-toggle="dropdown"
                                            ><span>{{ user.name }}</span></a>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a href="{{ url('dashboard') }}">
                                                    <i class="dropdown-icon fa fa-cog">
                                                    </i>
                                                    &nbsp;&nbsp;
                                                    Settings
                                                </a>
                                            </li>
                                            <li>
                                                <a href="{{ url('sign_out') }}">
                                                    <i class="dropdown-icon fa fa-power-off">
                                                    </i>
                                                    &nbsp;&nbsp;
                                                    Sign Out
                                                </a>
                                            </li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="main-menu" role="navigation">
                <div id="main-menu-inner">
                    <ul class="navigation">
                        {% for project in [1, 2, 3] %}
                            <li>
                                <a href="{{ url('dashboard') }}">
                                    <i class="menu-icon fa fa-tasks"></i>
                                    <span class="mm-text">
                                        {{ project }}
                                    </span>
                                    <span class="badge badge-success">
                                        {{ project }}
                                    </span>
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <div id="content-wrapper">
                {% block content %}
                {% endblock %}
            </div>
            <div id="main-menu-bg"></div>
        </div>
        <form
            accept-charset="UTF-8"
            action="[! action !]"
            class="hide"
            method="POST"
            ng-controller="download"
            >
            <input name="json" type="hidden" value="[! json !]">
        </form>
        {% include 'slots/modals.twig' %}
        {% include 'slots/javascripts.twig' %}
    </body>
</html>
