<!doctype html>
<html lang="en" ng-app="application">
    <head>
        <link
            href="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/images/favicon.ico"
            rel="shortcut icon"
            >
        <link
            href="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/vendor/bootstrap/docs/assets/css/bootstrap.css"
            rel="stylesheet"
            >
        <link
            href="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/vendor/bootstrap/docs/assets/css/bootstrap-responsive.css"
            rel="stylesheet"
            >
        <link
            href="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/vendor/bootstrap-datepicker/css/datepicker.css"
            rel="stylesheet"
            >
        <link
            href="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/vendor/font-awesome/css/font-awesome.min.css"
            rel="stylesheet"
            >
        <link
            href="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/vendor/select2/select2.css"
            rel="stylesheet"
            >
        <link
            href="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/stylesheets/all.css"
            rel="stylesheet"
            >
        <meta charset="utf-8">
        <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
        <meta content="width=device-width, initial-scale=1.0" name="viewport">
        <title>{{ module }}</title>
        <!--[if IE 7]>
            <link
                href="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/vendor/font-awesome/css/font-awesome-ie7.min.css"
                rel="stylesheet"
                >
        <![endif]-->
    </head>
    <body data-url="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}">
        <div id="top"></div>
        <div id="middle">
            <div class="navbar">
                <div class="navbar-inner">
                    <ul class="nav">
                        <li class="{% if nav == 'dashboard' %}active{% endif %}">
                            <a href="{{ url('dashboard') }}">
                                <i class="icon-home"></i>
                                Dashboard
                            </a>
                        </li>
                        {% if has_statistics(user) %}
                            <li class="{% if nav == 'a' %}active{% endif %} dropdown">
                                <a
                                    class="dropdown-toggle"
                                    data-toggle="dropdown"
                                    >
                                    <i class="icon-screenshot icon-large"></i>
                                    Analyzers
                                    <i class="caret"></i>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a href="{{ url('aa') }}">
                                            <i class="icon-user icon-large">
                                            </i>
                                            Author Analyzer
                                        </a>
                                    </li>
                                    <li>
                                        <a href="{{ url('ba') }}">
                                            <i class="icon-book icon-large">
                                            </i>
                                            Book Analyzer
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="{% if nav == 'kns' %}active{% endif %} dropdown">
                                <a
                                    class="dropdown-toggle"
                                    data-toggle="dropdown"
                                    >
                                    <i class="icon-user-md icon-large"></i>
                                    Kindle Niche Sidekick
                                    <i class="caret"></i>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a href="{{ url('kns_overview') }}">
                                            <i class="icon-tags icon-large">
                                            </i>
                                            Multiple Keywords
                                        </a>
                                    </li>
                                    <li>
                                        <a>
                                            <i class="icon-tag icon-large">
                                            </i>
                                            Single Keywords
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        {% else %}
                            {% if has_kns(groups) %}
                                <li class="{% if nav == 'kns' %}active{% endif %}">
                                    <a href="{{ url('kns_overview') }}">
                                        <i class="icon-user-md icon-large"></i>
                                        Kindle Niche Sidekick
                                    </a>
                                </li>
                            {% endif %}
                        {% endif %}
                        {% if has_aks(groups) %}
                            <li class="{% if nav == 'aks' %}active{% endif %}">
                                <a href="{{ url('aks') }}">
                                    <span class="icon-list icon-large"></span>
                                    Zon Keyword Sidekick
                                </a>
                            </li>
                        {% endif %}
                        {% if has_new_features(user) %}
                            <li class="{% if nav == 'ce' %}active{% endif %}">
                                <a href="{{ url('ce_overview') }}">
                                    <i class="icon-key icon-large"></i>
                                    Top 100 Explorer
                                </a>
                            </li>
                            <li class="{% if nav == 'ps' %}active{% endif %}">
                                <a href="{{ url('ps') }}">
                                    <i class="icon-search icon-large"></i>
                                    Popular Searches
                                </a>
                            </li>
                        {% endif %}
                        <li class="{% if nav == 'others' %}active{% endif %} dropdown">
                            <a
                                class="dropdown-toggle"
                                data-toggle="dropdown"
                                >
                                <i class="icon-cogs"></i>
                                Others
                                <i class="caret"></i>
                            </a>
                            <ul class="dropdown-menu">
                                {% if has_kns(groups) %}
                                    <li>
                                        <a href="{{ url('logos_overview') }}">
                                            <i class="icon-picture"></i>
                                            Logos
                                        </a>
                                    </li>
                                {% endif %}
                                <li>
                                    <a href="{{ url('feedback') }}">
                                        <i class="icon-comments-alt"></i>
                                        Feedback
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ url('profile') }}">
                                        <i class="icon-user"></i>
                                        Profile
                                    </a>
                                </li>
                                {% if has_statistics(user) %}
                                    <li>
                                        <a href="{{ url('statistics') }}">
                                            <i class="icon-bar-chart"></i>
                                            Statistics
                                        </a>
                                    </li>
                                {% endif %}
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="container-fluid">
                {% block content %}
                {% endblock %}
            </div>
        </div>
        <div id="bottom"></div>
        <div class="fade hide modal" id="kns-qsg">
            <div class="modal-header">
                <button
                    class="close"
                    type="button"
                    aria-hidden="true"
                    data-dismiss="modal"
                    >&times;</button>
                <h3>New User Guide</h3>
            </div>
            <div class="modal-body">
                <p>
                    Welcome to the Kindle Niche Sidekick new user guide.
                </p>
                <p>
                    Enter the keywords you wish to analyze in the Keywords box.
                    This box will allow scrolling as more keywords are entered
                    and may be resized for viewing by dragging the handle in
                    the lower right corner.
                </p>
                <p>
                    When you're ready to analyze, press the green Submit button
                    below the Keywords box. Your report will begin to generate
                    and export options will appear. Please note that the
                    download and email buttons will only become available when
                    your report completes. If you wish to have both the CSV and
                    PDF report e-mailed to you automatically, place a check in
                    the "Automatically email on completion" box. The on-screen
                    report will display information at a "high level" whereas
                    the PDF report will display <strong>very</strong> detailed
                    information. It is highly recommended that you download the
                    PDF report to fully understand our analysis.
                </p>
                <p>
                    <strong>Competition</strong> is calculated by determining
                    the "market type" of each keyword. We've modelled each
                    keyword by analyzing the market share owned by current
                    sellers to determine whether or not the keyword appears to
                    be accessible for new sellers. If 99% of sales within a
                    keyword belong to just one book, the odds of your
                    publication earning money are very low without a major
                    following. Ideal keywords are those in which buyers
                    purchase a variety of books, this typically means there's
                    no definitive "best product" for users searching for that
                    keyword. We recommend choosing keywords with low
                    competition so that your quality books may grab enough
                    sales and reviews to rise to a dominating position.
                </p>
                <p>
                    Brief explanations of each data point shown in the
                    on-screen report may be viewed by hovering your mouse over
                    their titles at any time.
                </p>
                <p>
                    You may open this guide at any time by pressing the blue
                    information icon in the upper right corner.
                </p>
            </div>
            <div class="modal-footer">
                <a
                    class="btn btn-success got-it"
                    aria-hidden="true"
                    data-dismiss="modal"
                    >Got it, thanks!</a>
            </div>
        </div>
        <div class="fade hide modal" id="aks-qsg">
            <div class="modal-header">
                <button
                    class="close"
                    type="button"
                    aria-hidden="true"
                    data-dismiss="modal"
                    >&times;</button>
                <h3>New User Guide</h3>
            </div>
            <div class="modal-body">
                <p>
                    This tool grabs keywords that are currently being searched
                    for on Amazon. The data obtained via this tool is extremely
                    valuable because it alllows you to put your products
                    directly in front of your target audience.
                </p>
                <p>
                    For best results with Kindle marketing, grab a list of
                    keywords from phrases that interest you and then analyze
                    them in the Kindle Niche Analyzer.
                </p>
                <p>
                    Eliminate the guesswork with Zon Keyword Sidekick.
                </p>
            </div>
            <div class="modal-footer">
                <a
                    class="btn btn-success got-it"
                    aria-hidden="true"
                    data-dismiss="modal"
                    >Got it, thanks!</a>
            </div>
        </div>
        <div class="fade hide modal" id="ps">
            <div class="modal-header">
                <button
                    class="close"
                    type="button"
                    aria-hidden="true"
                    data-dismiss="modal"
                    >&times;</button>
                <h3>How do we know this?</h3>
            </div>
            <div class="modal-body">
                <p>
                    Each hour, we scan Amazon for user searches similar to
                    phrases such as "books like..." and "books similar to..."
                    to find out what people want to read more of, right now.
                </p>
                <p>
                    We then identify these products and show them to you here
                    so that you have an immediate understanding of what's
                    currently in demand.
                </p>
            </div>
            <div class="modal-footer">
                <a
                    class="btn btn-success got-it"
                    aria-hidden="true"
                    data-dismiss="modal"
                    >Got it, thanks!</a>
            </div>
        </div>
        <div class="fade hide modal" ng-controller="modal">
            <div class="modal-header">
                <button
                    class="close"
                    type="button"
                    aria-hidden="true"
                    ng-click="click()"
                    >&times;</button>
                <h3>[! top !]</h3>
            </div>
            <div class="modal-body" ng-bind-html="middle|html"></div>
            <div class="modal-footer">
                <a
                    class="btn btn-success"
                    ng-click="click()"
                    >Close</a>
            </div>
        </div>
        <form
            accept-charset="UTF-8"
            action="[! action !]"
            class="hide"
            method="POST"
            ng-controller="download"
            >
            <input name="json" type="hidden" value="[! json !]">
        </form>
        <script
            src="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/vendor/jquery/jquery.min.js"
            type="text/javascript"
            ></script>
        <script
            src="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/vendor/jquery.cookie/jquery.cookie.js"
            type="text/javascript"
            ></script>
        <script
            src="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js"
            type="text/javascript"
            ></script>
        <script
            src="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/vendor/jquery-zclip/jquery.zclip.js"
            type="text/javascript"
            ></script>
        <script
            src="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/vendor/angular/angular.min.js"
            type="text/javascript"
            ></script>
        <script
            src="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/vendor/angular-encode-uri/dist/angular-encode-uri.min.js"
            type="text/javascript"
            ></script>
        <script
            src="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/vendor/angular-scroll/angular-scroll.min.js"
            type="text/javascript"
            ></script>
        <script
            src="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/vendor/bootstrap/docs/assets/js/bootstrap.js"
            type="text/javascript"
            ></script>
        <script
            src="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/vendor/lodash/dist/lodash.min.js"
            type="text/javascript"
            ></script>
        <script
            src="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/vendor/moment/min/moment-with-locales.min.js"
            type="text/javascript"
            ></script>
        <script
            src="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/vendor/select2/select2.min.js"
            type="text/javascript"
            ></script>
        <script
            src="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/javascripts/all.js"
            type="text/javascript"
            ></script>
    </body>
</html>
