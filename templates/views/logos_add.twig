{% extends 'layout.twig' %}

{% set module = 'Logos - Add' %}
{% set nav = 'others' %}

{% block content %}
<div id="logos_add">
    <div class="row-fluid">
        <div class="span12">
            <div class="page-header">
                <h1>{{ module }}</h1>
            </div>
            <form
                accept-charset="UTF-8"
                action="{{ url('logos_add') }}"
                class="form-horizontal"
                enctype="multipart/form-data"
                method="POST"
                >
                <div class="control-group {{ error is defined and error? 'error': '' }}">
                    <label class="control-label" for="logo">Logo</label>
                    <div class="controls">
                        <input id="logo" name="logo" type="file">
                        {% if error is defined and error %}
                            <span class="help-inline">{{ error }}</span>
                        {% endif %}
                    </div>
                </div>
                <span class="help-inline">
                    Note: Logos must be uploaded in .png format.
                </span>
                <div class="form-actions">
                    <button class="btn btn-success" type="submit">
                        <span class="icon-info-sign icon-large"></span>
                        Submit
                    </button>
                    <button class="btn btn-danger" type="reset">
                        <span class="icon-trash icon-large"></span>
                        Reset
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
