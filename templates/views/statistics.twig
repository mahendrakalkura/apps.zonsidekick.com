{% extends 'layout.twig' %}

{% set module = 'Statistics' %}

{% block content %}
{% include 'slots/back-to-dashboard.twig' %}
<div id="statistics">
    <div class="row-fluid">
        <div class="span12">
            <div class="page-header">
                <h1>{{ module }}</h1>
            </div>
            <table class="table table-hover table-striped tablesorter">
                <thead>
                    <tr>
                        <th>User</th>
                        <th class="right small">Reports</th>
                        <th class="right small">Total Keywords</th>
                        <th class="right small">Incomplete Keywords</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in items %}
                        <tr>
                            <td>{{ item.id }}. {{ item.display_name }}</td>
                            <td class="right small">{{ item.requests }}</td>
                            <td class="right small">{{ item.keywords_1 }}</td>
                            <td class="right small">{{ item.keywords_2 }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <th></th>
                        <th class="right small">{{ requests }}</th>
                        <th class="right small">{{ keywords_1 }}</th>
                        <th class="right small">{{ keywords_2 }}</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
{% endblock %}
