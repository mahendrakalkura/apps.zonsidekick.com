{% extends 'layout.twig' %}

{% set module = 'Sign In' %}
{% set nav = 'others' %}

{% block content %}
<div>
    <div class="row-fluid">
        <div class="span12">
            <div class="page-header">
                <h1>{{ module }}</h1>
            </div>
            {% include 'slots/alerts.twig' %}
            <form
                accept-charset="UTF-8"
                action="{{ url('sign_in') }}"
                class="form-horizontal"
                method="POST"
                >
                <div class="control-group {{ error? 'error': '' }}">
                    <label class="control-label" for="username">Username</label>
                    <div class="controls">
                        <input
                            class="span12"
                            id="username"
                            name="username"
                            type="text"
                            value=""
                            >
                        {% if error is defined and error %}
                            <span class="help-block">Invalid Username</span>
                        {% endif %}
                    </div>
                </div>
                <div class="control-group {{ error? 'error': '' }}">
                    <label class="control-label" for="password">Password</label>
                    <div class="controls">
                        <input
                            class="span12"
                            id="password"
                            name="password"
                            type="password"
                            value=""
                            >
                        {% if error %}
                            <span class="help-block">Invalid Password</span>
                        {% endif %}
                    </div>
                </div>
                <div class="form-actions">
                    <button class="btn btn-success" type="submit">
                        <span class="icon-info-sign icon-large"></span>
                        Submit
                    </button>
                    <button class="btn btn-danger" type="reset">
                        <span class="icon-trash icon-large"></span>
                        Reset
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
