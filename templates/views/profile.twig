{% extends 'layout.twig' %}

{% set module = 'Profile' %}
{% set nav = 'others' %}

{% block content %}
{% include 'slots/back-to-dashboard.twig' %}
<div id="logos_add">
    <div class="row-fluid">
        <div class="span12">
            <div class="page-header">
                <h1>{{ module }}</h1>
            </div>
            <p>All reports will be sent to the e-mail address on your account. To change this e-mail, simple correct the address shown below and press submit. Please be advised, this will change the e-mail address that you log in with.</p>
            {% include 'slots/alerts.twig' %}
            <form accept-charset="UTF-8" action="{{ url('profile') }}" class="form-horizontal" enctype="multipart/form-data" method="POST">
                <div class="control-group {{ error is defined and error? 'error': '' }}">
                    <label class="control-label" for="email">Email</label>
                    <div class="controls">
                        <input class="span12" id="email" name="email" type="text" value="{{ email }}">
                        {% if error is defined and error %}
                            <span class="help-inline">{{ error }}</span>
                        {% endif %}
                    </div>
                </div>
                <div class="form-actions">
                    <button class="btn btn-success" type="submit">
                        <span class="icon-info-sign icon-large"></span>
                        Submit
                    </button>
                    <button class="btn btn-danger" type="reset">
                        <span class="icon-trash icon-large"></span>
                        Reset
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
