{% extends 'layout.twig' %}

{% set module = 'Feedback' %}
{% set nav = 'others' %}

{% block content %}
{% include 'slots/back-to-dashboard.twig' %}
<div id="logos_add">
    <div class="row-fluid">
        <div class="span12">
            <div class="page-header">
                <h1>{{ module }}</h1>
            </div>
            <p>Share your thoughts, we're always listening!</p>
            <p>
                <strong>Note:</strong>
                For support related issues please use
                <a
                    href="https://perfectsidekick.zendesk.com/hc/en-us/categories/200005513-Zon-Sidekick"
                    target="_blank"
                    >
                    this
                </a>
                instead.
            </p>
            {% include 'slots/alerts.twig' %}
            <form
                accept-charset="UTF-8"
                action="{{ url('feedback') }}"
                class="form-horizontal"
                method="POST"
                >
                <div class="control-group {{ error is defined and error? 'error': '' }}">
                    <label class="control-label" for="body">Message</label>
                    <div class="controls">
                        <textarea
                            class="span12"
                            id="body"
                            name="body"
                            rows="15"
                            ></textarea>
                        {% if error is defined and error %}
                            <span class="help-inline">{{ error }}</span>
                        {% endif %}
                    </div>
                </div>
                <div class="form-actions">
                    <button class="btn btn-success" type="submit">
                        <span class="icon-info-sign icon-large"></span>
                        Submit
                    </button>
                    <button class="btn btn-danger" type="reset">
                        <span class="icon-trash icon-large"></span>
                        Reset
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
