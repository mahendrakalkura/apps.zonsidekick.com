{% set module = 'Welcome' %}

<!doctype html>
<!--[if IE 8]>
    <html class="ie8" lang="en" ng-app="application">
<![endif]-->
<!--[if IE 9]>
    <html class="ie9 gt-ie8" lang="en" ng-app="application">
<![endif]-->
<!--[if gt IE 9]><!-->
    <html class="gt-ie8 gt-ie9 not-ie" lang="en" ng-app="application">
<!--<![endif]-->
    <head>
        <link
            href="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/images/favicon.ico"
            rel="shortcut icon"
            >
        <link
            href="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/assets/stylesheets.css"
            rel="stylesheet"
            type="text/css"
            >
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0"
            >
        <!--[if lt IE 9]>
            <script
                src="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/vendor/pixeladmin/html/assets/javascripts/ie.min.js"
                ></script>
        <![endif]-->
        <title>{{ module }} - ZonSidekick</title>
    </head>
    <body class="theme-default page-signin">
        <div id="page-signin-bg">
            <div class="overlay"></div>
                <img src="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/vendor/pixeladmin/html/assets/demo/signin-bg-1.jpg">
            </div>
            <div class="signin-container">
                <div class="signin-info">
                    <a class="logo" href="{{ url('dashboard') }}">
                        <img
                            src="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/images/logo.png"
                            width="200"
                            >
                    </a>
                </div>
                <div class="signin-form">
                    <div class="signin-text">
                        <span>{{ module }}</span>
                    </div>
                    {% if error_1 %}
                        <div class="text-center">
                            You have already chosen a password.
                            <br>
                            <br>
                            Please proceed to the
                            <a href="{{ url('sign_in') }}">Sign In</a> page.
                        </div>
                    {% else %}
                        <p>
                            Hi <strong>{{ name }},</strong>
                            <br>
                            <br>
                            You're almost there!
                            Please choose a password for your account.
                        </p>
                        <form
                            accept-charset="UTF-8"
                            action=""
                            id="signin-form_id"
                            method="POST"
                            >
                            <div class="form-group w-icon {{ error_2 is defined and error_2? 'has-error': '' }}">
                                <input
                                    class="form-control input-lg"
                                    id="password_1"
                                    name="password_1"
                                    placeholder="Password"
                                    type="password"
                                    value=""
                                    >
                                <span class="fa fa-user signin-form-icon"></span>
                                {% if error_2 is defined and error_2 %}
                                    <div class="help-block">
                                        {{ error_2 }}
                                    </div>
                                {% endif %}
                            </div>
                            <div class="form-group w-icon {{ error_2 is defined and error_2? 'has-error': '' }}">
                                <input
                                    class="form-control input-lg"
                                    id="password_2"
                                    name="password_2"
                                    placeholder="Password (Repeat)"
                                    type="password"
                                    value=""
                                    >
                                <span class="fa fa-user signin-form-icon"></span>
                                {% if error_2 is defined and error_2 %}
                                    <div class="help-block">
                                        {{ error_2 }}
                                    </div>
                                {% endif %}
                            </div>
                            <div class="clearfix form-actions">
                                <input
                                    class="signin-btn bg-primary pull-right"
                                    type="submit"
                                    value="LET'S GO!"
                                    >
                            </div>
                        </form>
                        <br>
                        <hr>
                        <div class="text-center">
                            You'll be directed to your Zon Sidekick dashboard
                            immediately upon confirming your chosen password.
                            <br>
                            <br>
                            Having trouble?
                            <a
                                href="http://zonsidekick.com/support"
                                target="_blank">Click here</a>
                            for support.
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        <script
            src="{{ app.request.getSchemeAndHttpHost() }}{{ app.request.baseUrl }}/assets/javascripts.js"
            type="text/javascript"
            ></script>
    </body>
</html>
