{% extends 'layout.twig' %}

{% set module = 'Kindle Niche Sidekick - Delete' %}

{% block content %}
{% include 'slots/back-to-dashboard.twig' %}
<div id="kns_delete">
    <div class="row-fluid">
        <div class="span12">
            <div class="page-header">
                <h1>{{ module }}</h1>
            </div>
            <form accept-charset="UTF-8" action="{{ url('kns_delete', {'id': id}) }}" method="POST">
                <p>Are you sure you want to delete this report?</p>
                <div class="form-actions">
                    <button class="btn btn-success" type="submit">
                        <span class="icon-info-sign icon-large"></span>
                        Yes
                    </button>
                    <a class="btn btn-danger" href="{{ url('kns_overview') }}">
                        <span class="icon-trash icon-large"></span>
                        No
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
